class Solution {
  public:
    int findMin(vector<int>& arr) {
        // complete the function here
        int i=1;
        int n=arr.size();
        
        if (n ==1 || arr[0]<arr[n - 1] ){
         return arr[0];
            }
            
        while(i<n){
            if(arr[i-1]>arr[i]){
                return arr[i];
            }
            i++;
            
        }
        
        // return arr[0];
    
    }
};
